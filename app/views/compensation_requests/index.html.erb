<p id="notice"><%= notice %></p>

<h1>Compensation Requests</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Reason</th>
      <th>Currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compensation_requests.each do |compensation_request| %>
      <tr>
        <td><%= compensation_request.amount %></td>
        <td><%= compensation_request.reason %></td>
        <td><%= compensation_request.currency %></td>
        <td><%= link_to 'Show', compensation_request %></td>
        <td><%= link_to 'Edit', edit_compensation_request_path(compensation_request) %></td>
        <td><%= link_to 'Destroy', compensation_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Compensation Request', new_compensation_request_path %>