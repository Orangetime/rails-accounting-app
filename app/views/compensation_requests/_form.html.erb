<%= simple_form_for :compensation_request, url: compensation_requests_path do |f| %>
  <div class="form-inputs">
    <%= f.input :amount %>
    <%= f.input :reason %>
    <%= f.input :currency, collection: CompensationRequest.currency.values %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>